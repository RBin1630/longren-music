.navTabs {
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 30rpx;
  color: #7e7e7e7e;
  font-size: 28rpx;
}

.activeTabs {
  font-size: 36rpx;
  color: #000;
}

.tab-content {
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 0 10rpx;
}

.videoItem {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 47%;
  height: 290rpx;
  box-sizing: border-box;
  margin: 10rpx;
  background-color: #fff;
  border-radius: 15rpx;
  overflow: hidden;
}

.videoItem image {
  width: 100%;
  height: 200rpx;
}

.videoTitle {
  font-size: 28rpx;
  padding: 6rpx 10rpx 0 10rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.playCount {
  position: absolute;
  left: 20rpx;
  bottom: 108rpx;
  font-size: 24rpx;
  color: #fff;
  z-index: 99;
}

.playTime {
  position: absolute;
  right: 20rpx;
  bottom: 108rpx;
  font-size: 24rpx;
  color: #fff;
  z-index: 99;
}

.tab-content-mv {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.mvItem {
  position: relative;
  width: 100%;
  height: 480rpx;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin: 20rpx 0;
  box-sizing: border-box;
  padding-top: 0;
}

.mvItem video,
.mvItem image {
  width: 100%;
  height: 400rpx;
  padding-bottom: 10rpx;
}

.mvItem .mvTitle {
  display: block;
  padding: 0 30rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.mvItem .mvPlayCount {
  position: absolute;
  bottom: 90rpx;
  right: 30rpx;
  color: #fff;
}

