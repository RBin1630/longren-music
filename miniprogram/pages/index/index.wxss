/* 当前页面公共样式 */
.title {
  font-size: 36rpx;
  font-weight: 700;
}

/* 搜索区域 */
.searchContainer {
  position: relative;
  padding: 10rpx 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #000;
}
.searchIcon {
  position: absolute;
  top: 16rpx;
  left: 35rpx;
}
.searchInput {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  border: 1px solid #ccc;
  border-radius: 20rpx;
  text-align: center;
  font-size: 28rpx;
}

/* 轮播图 */
.bannerContainer {
  padding: 20rpx 0;
  background-color: #fff;
}

.bannerSwiper {
  border-radius: 20rpx;
  height: 300rpx;
}

.bannerItem {
  height: 100%;
  position: relative;
  margin: 0 20rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  overflow: hidden;
}

.banner-img {
  width: 100%;
  height: 100%;
}

.bannerTypeTitle {
  position: absolute;
  right: 0rpx;
  bottom: 0;
  z-index: 9;
  color: #fff;
  background-color: #c40c0c;
  font-size: 24rpx;
  padding: 0 16rpx;
  border-radius: 26rpx 0 0 0;
}

/* 歌曲推荐部分 */
.songRecommendContainer {
  margin: 20rpx 0;
  border-radius: 20rpx;
  background-color: #fff;
  border: 1px solid #000;
}

.songRecommedList {
  padding: 20rpx;
  height: 840rpx;
}

.songRecommendItem {
  display: flex;
  margin-bottom: 20rpx;
  align-items: center;
  background-color: #eee;
}

.songRecommendItem image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

.songRecommendItem .songInfo {
  display: flex;
  flex: 1;
  flex-direction: column;
  margin-left: 20rpx;
}

.songRecommendItem .songInfo .songName {
  max-width: 480rpx;
  padding-bottom: 15rpx;
}

.songRecommendItem .songInfo .songAuthor {
  font-size: 26rpx;
  color: #555;
}

/* 热门歌单推荐 */
.recommendContainer {
  background-color: #fff;
  border-radius: 0 0 20rpx 20rpx;
  border-radius: 20rpx;

  border: 1px solid #000;
}

.scrollView {
  display: flex;
  height: 300rpx;
  padding: 20rpx 0;
}

.scrollItem {
  margin-left: 20rpx;
}

.scrollView :last-child {
  margin-right: 20rpx;
}

.scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}

.scrollItem text {
  font-size: 26rpx;
  display: -webkit-box;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/* 排行榜 */
.topListContainer {
  background-color: #fff;
  margin: 20rpx 0;
  padding-bottom: 20rpx;
  border-radius: 20rpx;
  border: 1px solid #000;
}

.topListSwiper {
  height: 450rpx;
  margin-top: 20rpx;
}

.topListItem {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 20rpx;
  margin: 0 20rpx;

  background-color: #eee;
}

.topTitle {
  text-align: center;
}

.songItem {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.songItem image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 16rpx;
}

.no {
  padding: 0 20rpx;
  font-weight: 700;
}

.songName {
  max-width: 280rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.singer {
  margin-left: 16rpx;
  max-width: 260rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #666;
  font-size: 26rpx;
}
