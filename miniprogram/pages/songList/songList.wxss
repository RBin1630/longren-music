/* miniprogram/pages/songList/songList.wxss */
.bg {
  position: relative;
  width: 100%;
  height: 400rpx;
}

.bg image {
  width: 100%;
  height: 100%;
}

.bg .randomPlayAll {
  position: absolute;
  top: 80%;
  left: 50%;
  transform: translate(-50%, -80%);
  border: 1px solid lightgreen;
  color: lightgreen;
  padding: 20rpx;
  border-radius: 40rpx;
  font-weight: 700;
}

.songItem {
  position: relative;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}

.songItem .songInfo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 100%;
  line-height: 100%;
  padding-left: 50rpx;
}

.songItem .songInfo .author {
  margin-top: 10rpx;
  color: #666;
  font-size: 30rpx;
}

.songItem .like {
  position: absolute;
  top: 30rpx;
  right: 100rpx;
}
